class Solution {
    public String reverseWords(String s) {
        int n = s.length();
        int i = 0;

        // To store words
        String[] words = new String[n]; // max possible words
        int wordCount = 0;

        // Step 1: traverse string
        while (i < n) {

            // Step 2: skip spaces
            while (i < n && s.charAt(i) == ' ') {
                i++;
            }

            if (i >= n) break;

            // Step 3: build word
            StringBuilder sb = new StringBuilder();
            while (i < n && s.charAt(i) != ' ') {
                sb.append(s.charAt(i));
                i++;
            }

            // Step 4: store word
            words[wordCount++] = sb.toString();

            // Step 5: skip extra spaces after word
            while (i < n && s.charAt(i) == ' ') {
                i++;
            }
        }

        // Step 6: reverse words
        StringBuilder result = new StringBuilder();
        for (int j = wordCount - 1; j >= 0; j--) {
            result.append(words[j]);
            if (j != 0) {
                result.append(" ");
            }
        }

        return result.toString();
    }
}


